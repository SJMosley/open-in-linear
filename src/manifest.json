{
  "manifest_version": 2,
  "name": "Open in Notion",
  "version": "0.1",
  "description": "Open Notion links in the desktop client.",
  "icons": {
    "16": "icons/icon-ext-16.png",
    "48": "icons/icon-ext-48.png",
    "128": "icons/icon-ext-128.png"
  },
  "author": "Sergey Osokin @creold",
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-on-16.png",
      "32": "icons/icon-on-32.png",
      "48": "icons/icon-on-48.png",
      "128": "icons/icon-on-128.png"
    },
    "default_title": "Open in Notion"
  },
  "options_ui": { 
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.notion.so/*"],
      "js": ["js/redirect.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "*://*.notion.so/*"
  ]
}
